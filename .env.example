# Server
PORT=3000
NODE_ENV=development

# Database - SQLite (development)
DB_DIALECT=sqlite
DB_STORAGE=./gatekeeper.sqlite

# Database - PostgreSQL (production) - uncomment and fill in for production
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=gatekeeper
# DB_USER=postgres
# DB_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Rate Limiting
DEFAULT_LIMIT=10
DEFAULT_WINDOW=60

# Security
ADMIN_SECRET=your_admin_secret_here_change_in_production
BCRYPT_ROUNDS=10
